# Server Configuration
PORT=4000
NODE_ENV=dev

# Database Configuration
MONGODB_URL=mongodb://localhost:27017/iot_water_system

# JWT Configuration
JWT_SECRET_KEY_ACCESS_TOKEN=your_access_token_secret
JWT_SECRET_KEY_REFRESH_TOKEN=your_refresh_token_secret

# Email Configuration
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password

# VNPay Configuration
VNP_TMN_CODE=your_vnp_tmn_code
VNP_HASH_SECRET=your_vnp_hash_secret
VNP_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNP_API=https://sandbox.vnpayment.vn/merchant_webapi/api/transaction
VNP_RETURN_URL=https://localhost:4000/api/v1/billing/vnpay_return

# MQTT Configuration
MQTT_BROKER_URL=localhost
MQTT_BROKER_PORT=2403
MQTT_TOPIC_SENSOR_DATA=/sensor/data
MQTT_TOPIC_CONTROL=/sensor/control
MQTT_TOPIC_LEVEL=/sensor/level
MQTT_TOPIC_CONFIG=/sensor/config
MQTT_TOPIC_CONFIG_STATUS=/sensor/config/status
MQTT_TOPIC_LEAK_ALERT=/sensor/leak/alert

# WebSocket Configuration
WEBSOCKET_PORT=4000

# Default System Configuration
DEFAULT_TANK_HEIGHT=15.0
DEFAULT_MAX_TEMP=35.0
DEFAULT_MAX_TDS=500.0
DEFAULT_LEAK_THRESHOLD=0.5
DEFAULT_FLOW_THRESHOLD=0.2
DEFAULT_ALERTS_ENABLED=true
DEFAULT_PUMP_TIMEOUT=300

